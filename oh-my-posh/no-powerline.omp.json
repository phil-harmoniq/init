{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "final_space": false,
  "osc99": false,
  "console_title": false,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "horizontal_offset": 0,
      "vertical_offset": 0,
      "segments": [
        {
          "type": "os",
          "style": "diamond",
          "foreground": "#26C6DA",
          "properties": {
            "prefix": "",
            "postfix": " ",
            "macos": "üçè",
            "windows": "ü™ü",
            "linux": "üêß"
          }
        },
        {
          "type": "session",
          "style": "plain",
          "foreground": "#26C6DA",
          "properties": {
            "display_host": true,
            "prefix": "",
            "postfix": " ",
            "user_info_separator": "@",
            "display_user": true
          }
        },
        {
          "type": "shell",
          "style": "plain",
          "foreground": "#ffffff",
          "properties": {
            "prefix": "",
            "postfix": " "
          }
        },
        {
          "type": "path",
          "style": "plain",
          "invert_powerline": false,
          "foreground": "#14c2dd",
          "properties": {
            "prefix": "",
            "postfix": " ",
            "style": "full"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#a2c4e0",
          "invert_powerline": false,
          "properties": {
            "prefix": "",
            "postfix": " ",
            "branch_icon": "git:",
            "display_stash_count": true,
            "display_status": false
          }
        },
        {
          "type": "root",
          "style": "plain",
          "properties": {
            "root_icon": "‚ö°"
          },
          "foreground": "#193549",
          "background": "#ffff66"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#007ACC",
          "properties": {
            "prefix": "",
            "text": "\u276f"
          }
        }
      ]
    }
  ]
}