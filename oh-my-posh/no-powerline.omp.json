{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "final_space": false,
  "osc99": false,
  "console_title": false,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "horizontal_offset": 0,
      "vertical_offset": 0,
      "segments": [
        {
          "type": "os",
          "style": "plain",
          "foreground": "#26C6DA",
          "properties": {
            "prefix": "",
            "postfix": "",
            "macos": "mac"
        }
        },
        {
          "type": "session",
          "style": "plain",
          "foreground": "#26C6DA",
          "properties": {
            "display_host": false,
            "prefix": " ",
            "postfix": ": ",
            "user_info_separator": "",
            "display_user": true
          }
        },
        {
          "type": "path",
          "style": "plain",
          "invert_powerline": false,
          "foreground": "lightGreen",
          "properties": {
            "prefix": "",
            "style": "folder"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "invert_powerline": false,
          "properties": {
            "branch_icon": "",
            "display_stash_count": true,
            "display_status": false,
            "prefix": "<#ffffff>on</> "
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#FFD54F",
          "properties": {
              "prefix": "",
              "text": "\u276F"
          }
        }
      ]
    }
  ]
}
